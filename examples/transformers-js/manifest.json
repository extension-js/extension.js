{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "transformers-js",
  "description": "Transformers.js-based extension template",
  "chromium:manifest_version": 3,
  "firefox:manifest_version": 2,
  "author": "Your Name",
  "icons": {
    "48": "images/extension_48.png"
  },
  "chromium:action": {
    "default_icon": {
      "48": "images/extension_48.png"
    },
    "default_title": "Open Transformers.js Side Panel"
  },
  "firefox:browser_action": {
    "default_icon": {
      "48": "images/extension_48.png"
    },
    "default_title": "Open Transformers.js Side Panel"
  },
  "chromium:side_panel": {
    "default_path": "sidebar/index.html",
    "default_title": "Transformers.js Side Panel"
  },
  "firefox:sidebar_action": {
    "default_panel": "sidebar/index.html",
    "default_title": "Transformers.js Side Panel"
  },
  "chromium:permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ],
  "firefox:permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ],
  "minimum_chrome_version": "92",
  "background": {
    "chromium:service_worker": "background.js",
    "firefox:scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content/scripts.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/extension_48.png", "images/logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
