{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Extension.js - React Sidebar Example",
  "description": "React-based extension with a sidebar panel. Adds a sidebar with a simple page.",
  "icons": {
    "16": "src/images/react.png",
    "48": "src/images/react.png",
    "128": "src/images/react.png"
  },
  "chromium:action": {
    "default_icon": {
      "48": "src/images/react.png"
    },
    "default_title": "Open Side Panel"
  },
  "firefox:browser_action": {
    "default_icon": {
      "48": "src/images/react.png"
    },
    "default_title": "Open Side Panel"
  },
  "chromium:side_panel": {
    "default_path": "src/sidebar/index.html",
    "default_title": "Side Panel Content"
  },
  "firefox:sidebar_action": {
    "default_panel": "src/sidebar/index.html",
    "default_title": "Side Panel Content"
  },
  "chromium:permissions": ["sidePanel"],
  "background": {
    "chromium:service_worker": "src/background.ts",
    "firefox:scripts": ["src/background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/scripts.tsx"]
    }
  ]
}
