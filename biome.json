{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "maxSize": 262144,
    "includes": [
      "**",
      "!_FUTURE/**",
      "!extensions/**",
      "!extensions/**/dist/**",
      "!templates/**/dist/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/out/**",
      "!**/coverage/**",
      "!**/e2e-report/**",
      "!**/playwright-report/**",
      "!**/.next/**",
      "!**/.nuxt/**",
      "!**/.svelte-kit/**",
      "!**/.vite/**",
      "!**/.cache/**",
      "!**/.turbo/**",
      "!**/.pnpm-store/**",
      "!extensions/browser-extension/src/styles/**",
      "!extensions/browser-extension/src/content_scripts/shared/content-index.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "none",
      "bracketSpacing": false,
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false
    }
  }
}
