{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "centralized-logger",
  "description": "Centralized logger for all extension contexts with React UI",
  "chromium:manifest_version": 3,
  "firefox:manifest_version": 2,
  "author": "Cezar Augusto",
  "icons": {
    "48": "images/logo.png"
  },
  "chromium:action": {
    "default_icon": {
      "48": "images/logo.png"
    },
    "default_title": "Open Side Panel"
  },
  "firefox:browser_action": {
    "default_icon": {
      "48": "images/logo.png"
    },
    "default_title": "Open Side Panel"
  },
  "devtools_page": "devtools/index.html",
  "chromium:side_panel": {
    "default_path": "devtools/index.html",
    "default_title": "Side Panel Content"
  },
  "firefox:sidebar_action": {
    "default_panel": "devtools/index.html",
    "default_title": "Side Panel Content"
  },
  "chromium:permissions": [
    "management",
    "tabs",
    "storage",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "chromium:service_worker": "background/index.ts",
    "firefox:scripts": ["background/index.ts"]
  },
  "chromium:web_accessible_resources": [
    {
      "resources": ["assets/*", "scripts/*", "pages/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
