{
  "private": true,
  "type": "module",
  "name": "extension",
  "packageManager": "pnpm@9.9.0",
  "description": "The monorepo of all things Extension.js, including the Extension.js CLI, its programs, packages, website, and documentation.",
  "homepage": "https://extension.js.org/",
  "workspaces": [
    "programs/*"
  ],
  "scripts": {
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "compile": "dotenv -- turbo run compile",
    "cleanInstall": "pnpm clean && rm -rf pnpm-lock.yaml && pnpm install && pnpm compile && pnpm format && pnpm lint && pnpm types",
    "extension": "dotenv -- node ./programs/cli/dist/cli.js",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,json}\"",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "release": "dotenv -- turbo run compile && changeset publish && node ./scripts/aggregate-changelog.cjs",
    "sync:readme": "node ./scripts/sync-readme.cjs",
    "check:readme": "node -e \"const fs=require('fs');const a=fs.readFileSync('README.md','utf8');const b=fs.readFileSync('programs/cli/README.md','utf8');process.exit(a===b?0:1)\"",
    "test": "dotenv -- turbo run test",
    "test:coverage": "dotenv -- turbo run test:coverage",
    "test:dev": "dotenv -- turbo run test:dev",
    "test:build": "dotenv -- turbo run test:build",
    "test:create": "dotenv -- turbo run test:create",
    "test:cli": "dotenv -- turbo run test:cli",
    "test:watch": "dotenv -- turbo run test:watch",
    "test:e2e": "pnpm exec playwright test",
    "types": "pnpm tsc",
    "version-packages": "changeset version",
    "publish-packages": "turbo run compile lint test && changeset version && changeset publish",
    "watch": "pnpm compile && dotenv -- turbo run watch --filter=./programs/* --concurrency=5",
    "messages": "pnpm dlx tsx ./scripts/render-messages.ts",
    "messages:plain": "pnpm dlx tsx ./scripts/render-messages.ts --plain",
    "messages:cli": "pnpm dlx tsx ./scripts/render-messages.ts --target=cli",
    "messages:create": "pnpm dlx tsx ./scripts/render-messages.ts --target=create",
    "messages:develop": "pnpm dlx tsx ./scripts/render-messages.ts --target=develop",
    "messages:webpack": "pnpm dlx tsx ./scripts/render-messages.ts --target=webpack",
    "messages:browser": "pnpm dlx tsx ./scripts/render-messages.ts --target=browsers",
    "messages:reload": "pnpm dlx tsx ./scripts/render-messages.ts --target=reload"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.16.0",
    "@playwright/test": "^1.49.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.2"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.7"
    }
  }
}
