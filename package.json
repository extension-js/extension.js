{
  "private": true,
  "type": "module",
  "name": "extension-workspace",
  "packageManager": "pnpm@9.9.0",
  "description": "The monorepo of all things Extension.js, including the Extension.js CLI, its programs, packages, website, and documentation.",
  "homepage": "https://extension.js.org/",
  "workspaces": [
    "programs/*"
  ],
  "scripts": {
    "compile": "dotenv -- turbo run compile || pnpm -r --filter ./programs/* run compile",
    "extension": "dotenv -- node programs/cli/dist/cli.js",
    "watch": "cross-env EXTENSION_DEV_NO_BROWSER=1 pnpm compile && cross-env EXTENSION_DEV_NO_BROWSER=1 dotenv -- turbo run watch --filter=./programs/* --concurrency=5",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,json}\"",
    "lint": "eslint .",
    "test": "dotenv -- turbo run test --filter=./programs/cli --filter=./programs/develop",
    "test:cli": "dotenv -- turbo run test --filter=./programs/cli",
    "test:build": "dotenv -- turbo run test --filter=./programs/develop",
    "test:dev": "dotenv -- turbo run test --filter=./programs/develop",
    "test:e2e": "pnpm exec playwright test",
    "smoke:npx": "node scripts/smoke-npx.mjs",
    "ci:test:core": "pnpm run test:dev",
    "ci:test:develop": "pnpm run test:dev",
    "ci:test:cli": "pnpm run test:cli",
    "ci:test:plugin-browsers": "pnpm run test:dev",
    "ci:test:plugin-css": "pnpm run test:dev",
    "ci:test:plugin-compatibility": "pnpm run test:dev",
    "ci:test:plugin-static-assets": "pnpm run test:dev",
    "ci:test:plugin-extension": "pnpm run test:dev",
    "ci:test:plugin-js-frameworks": "pnpm run test:dev",
    "ci:test:plugin-compilation": "pnpm run test:dev",
    "postcompile": "node scripts/build-extensions.cjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@playwright/test": "^1.55.1",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.10.1",
    "@types/webextension-polyfill": "0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.39.1",
    "extension": "workspace:*",
    "globals": "^15.13.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "tsx": "^4.19.2",
    "typescript": "5.7.2"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.7",
      "vitest": "3.2.4",
      "js-yaml@^3": "3.14.2",
      "js-yaml@^4": "4.1.1",
      "glob": "11.1.0"
    }
  }
}
